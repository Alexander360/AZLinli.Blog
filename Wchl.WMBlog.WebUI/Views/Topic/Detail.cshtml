@model List<Wchl.WMBlog.Model.Models.TopicDetail>

@{
    ViewBag.Title = "博客详情页";
}
<link href="~/Content/lib/zui/doc.css" rel="stylesheet" />

<section>
    <div spellcheck="false" class="example">
        <br>
        <ul class="breadcrumb breadcrumb-block">
            <li><i class="icon-location-arrow icon-muted"></i></li>
            <li><a href="/home/index">首页</a></li>
            <li><a href="/blog/index">随笔</a></li>
            <li class="active">列表</li>
        </ul>
        <div class="list list-condensed">
            <header>
                <div class="pull-right">
                    <div class="btn-group" data-toggle="buttons-radio">
                        <button type="button" class="btn btn-default active"><i class="icon-th-list"></i></button>
                        <button type="button" class="btn btn-default"><i class="icon-th"></i></button>
                        <button type="button" class="btn btn-default"><i class="icon-th-large"></i></button>
                    </div>
                </div>
                <h3><i class="icon-list-ul icon-border-circle"></i> 列表 &nbsp;<small>@(Model.Count) 文章</small></h3>
            </header>
            <div class="items items-hover">

                @{
                    foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="item-heading">
                                <div class="pull-right label label-success">收录</div>
                                @{
                                    if (item.tdTop > 0)
                                    {
                                        <img style="height:25px;float:left;margin:-5px 5px 0 0;" src="~/Content/images/top.png" />
                                    }
                                }

                                <h4><a href="/topic/articledetail/@item.Id">@(item.tdName)</a></h4>
                            </div>
                            <div class="item-content">
                                <div class="media pull-right" style="max-width:80px;"><img src="@(item.tdLogo)" alt=""></div>
                                <div class="text">
                                    @((Html.Raw(item.tdContent)))......
                                    <a href="/topic/articledetail/@item.Id" class="">阅读全文</a>
                                </div>
                            </div>
                            <div class="item-footer">
                                <a href="#" class="text-muted"><i class="icon-comments"></i> @(item.tdRead)</a> &nbsp; <span class="text-muted">@(item.tdCreatetime)</span>
                            </div>

                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
@section scripts
{
    <script src="~/Content/lib/laypage/laypage.js"></script>

}
