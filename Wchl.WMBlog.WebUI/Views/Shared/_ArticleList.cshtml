@model PagedList<BlogArticle>

@{
    foreach (var item in Model)
    {
        if (item == Model[0])
        {
            <div class="item">
                <div class="item-heading">
                    <div class="pull-right" style="display:none;"><a href="###"><i class="icon-pencil"></i> 编辑</a> &nbsp;<a href="#"><i class="icon-remove"></i> 删除</a></div>
                    <h4><span class="label label-success">新</span>&nbsp; <a href="/blog/Detail/@item.bID" id="blogXQ">@item.btitle</a></h4>
                </div>
                <div class="item-content">
                    @item.bcontent
                </div>
                <div class="item-footer">
                    <a href="#" class="text-muted"><i class="icon-comments"></i> @item.btraffic</a>&nbsp;
                    <span class="text-muted">@item.bCreateTime</span>
                </div>
            </div>
        }
        else
        {
            <div class="item">
                <div class="item-heading">
                    <div class="pull-right"  style="display:none;"><a href="###"><i class="icon-pencil"></i> 编辑</a> &nbsp;<a href="#"><i class="icon-remove"></i> 删除</a></div>
                    <h4><a href="/blog/Detail/@item.bID">@item.btitle</a></h4>
                </div>
                <div class="item-content">
                    @item.bcontent
                </div>
                <div class="item-footer">
                    <a href="#"><i class="icon-comments"></i> @item.btraffic</a>&nbsp;
                    <span class="text-muted">@item.bCreateTime</span>
                </div>
            </div>
        }
    }
}
<div class="text-center">
    @Ajax.Pager(Model, new PagerOptions { PageIndexParameterName = "id", ContainerTagName = "ul", CssClass = "pager", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>" }, new MvcAjaxOptions { UpdateTargetId = "items", OnSuccess = "handleSuccess" })
</div>



