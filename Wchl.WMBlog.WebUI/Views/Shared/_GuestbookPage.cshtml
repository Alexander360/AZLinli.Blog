<article>
    <div spellcheck="false" class="example">
        <div class="comments">
            <header>
                <div class="pull-right"><a href="#commentReplyForm2" class="btn btn-primary"><i class="icon-comment-alt"></i> 发表评论</a></div>
                <h3>所有评论</h3>
            </header>
            <section class="comments-list" id="comments-list">
              @{ if (ViewBag.gblist != null)
                  {
                      foreach (var list in ViewBag.gblist)
                      {
                        <div class="comment">
                            <a href="###" class="avatar">
                                <i class="icon-user icon-2x"></i>
                            </a>
                            <div class="content">
                                <div class="pull-right text-muted">@list.createdate</div>
                                <div><a href="###"><strong>@list.username</strong></a></div>
                                <div class="text">@list.body</div>
                                <div class="actions">
                                    <a href="##">回复</a>
                                </div>
                            </div>
                        </div>
                      }
                  }

            }
            </section>
            <br />
            <div class="text-center" id="textcenter">
               
            </div>
            <footer>
                <div class="reply-form" id="commentReplyForm2">
                    <a href="###" class="avatar"><i class="icon-user icon-2x"></i></a>
                    @using (Ajax.BeginForm("addGuestbook", "Blog", new AjaxOptions()
                    {
                        HttpMethod = "post",
                        OnSuccess="su"

                    }, new { @class = "form-horizontal" }))
                    {
                        <input type="hidden" id="blogId" name="blogId" value=""/>
                        <div class="form-group col-md-4 form-inline">
                            <label for="username" class="col-xs-3">昵称</label>
                            <div>
                                <input type="text" class="form-control" name="username" id="username" placeholder="昵称">
                            </div>
                        </div>
                        <div class="form-group col-md-4 form-inline">
                            <label for="phone" class="col-xs-3">手机</label>
                            <div>
                                <input type="text" class="form-control" name="phone" id="phone" placeholder="手机">
                            </div>
                        </div>
                        <div class="form-group col-md-4 form-inline">
                            <label for="QQ" class="col-xs-3">Q Q</label>
                            <div>
                                <input type="text" class="form-control" name="QQ" id="QQ" placeholder="Q Q">
                            </div>
                        </div>
                        <div class="form-group"></div>
                        <div class="form-group">
                            <textarea class="form-control new-comment-text" id="body" name="body" rows="4" placeholder="撰写留言..."></textarea>
                        </div>
                        <div class="form-group comment-user">
                            <div class="row">
                                <div class="col-md-2 col-md-offset-10"><button type="submit" class="btn btn-block btn-primary " value="提交">提交</button></div>
                            </div>
                        </div>
                    }
                </div>
            </footer>
        </div>
    </div>
</article>
