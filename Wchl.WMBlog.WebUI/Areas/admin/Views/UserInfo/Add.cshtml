
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>添加用户信息</title>
    <link href="~/Content/CSS/zui.css" rel="stylesheet" />
    <link href="~/Content/CSS/zui-theme-blue.css" rel="stylesheet" />
    <link href="~/Content/CSS/index.css" rel="stylesheet" />
    <script src="~/Content/JS/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/JS/zui.js"></script>
    <script src="~/Content/lib/layer/layer.js"></script>
    <script type="text/javascript">
        $(function () {
            //关闭弹出窗口
            $("#btncancel").click(function () {
                helper.layer_close();
            })
        })

        function ajaxsuccess(ajaxobj) {
            if (ajaxobj.status == "0") {
                helper.layer_success("添加成功");
            } else {

            }
        }
    </script>
</head>
<body>
    <div class="example">
        <form action="/admin/UserInfo/Add" class="form-horizontal" id="formTicket1" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="form-group">
                    <label for="intputusername" class="col-sm-2 required">用户名：</label>
                    <div class="col-md-5 col-sm-10">
                        <input type="text" name="uLoginName" class="form-control" id="intputusername" placeholder="电子邮件/手机号/用户名">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputname" class="col-sm-2 required">姓名：</label>
                    <div class="col-md-5 col-sm-10">
                        <input type="text" name="uRealName" class="form-control" id="inputname" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputPassword" class="col-sm-2 required">密码：</label>
                    <div class="col-md-5 col-sm-10">
                        <input type="password" name="uLoginPWD" class="form-control" id="InputPassword" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="verifyPassword" class="col-sm-2 required">确认密码：</label>
                    <div class="col-md-5 col-sm-10">
                        <input type="password" class="form-control" id="verifyPassword" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputEmail" class="col-sm-2">电子邮箱：</label>
                    <div class="col-md-5 col-sm-10">
                        <input type="email" class="form-control" id="InputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-3 pull-right">
                        <button type="submit" onclick="{  return checkURL(); }" id="btnsubmit" class="btn btn-primary">提交</button>
                        <button type="button" id="btncancel" class="btn btn-primary">取消</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        function checkURL() {
            if (!$("#intputusername").val()) {
                helper.layer_error('用户名不能为空');
                $("#intputusername").focus();
                return false;
            }
            if (!$("#inputname").val()) {
                helper.layer_error('姓名不能为空');
                $("#inputname").focus();
                return false;
            }

            if (!$("#InputPassword").val()) {
                helper.layer_error('密码不能为空');
                $("#InputPassword").focus();
                return false;
            }

            if (!$("#verifyPassword").val()) {
                helper.layer_error('确认密码不能为空');
                $("#verifyPassword").focus();
                return false;
            }

            if ($("#InputPassword").val() !== $("#verifyPassword").val()) {
                helper.layer_error('两次密码不一致');
                $("#verifyPassword").focus();
                return false;
            }


            return true;
        }

    </script>
</body>
</html>
